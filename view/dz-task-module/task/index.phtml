            );
            ?>
        </div>
    </li>
    <li>
        <pre>&lt;?php
echo $this->dzTaskAddWidget(
    array(
        'hasTitle' => false
    )
);
?&gt;</pre>
        <div class="widget-container">
            <?php
            echo $this->dzTaskAddWidget(
                array(
                    'hasTitle' => false
                )
            );
            ?>
        </div>
    </li>
    <li>
        <pre>&lt;?php
echo $this->dzTaskAddWidget(
    array(
        'hasSubmit' => false
    )
);
?&gt;</pre>
        <div class="widget-container">
